<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://java.sun/com/xml/ns/javaee"
         id="WebApp_ID" version="2.5">

    <display-name>sphinx</display-name>
    
    <resource-ref>
        <description>Database connection</description>
        <res-ref-name>jdbc/ExamDB</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>   
    </resource-ref>

    <welcome-file-list>
        <welcome-file>login.jsp</welcome-file>
    </welcome-file-list>

    <servlet>
        <servlet-name>UserServlet</servlet-name>
        <servlet-class>com.yakovchuk.sphinx.controller.UserServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>UserServlet</servlet-name>
        <url-pattern>/user</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>UserServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ExamController</servlet-name>
        <servlet-class>com.yakovchuk.sphinx.controller.ExamServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ExamController</servlet-name>
        <url-pattern>/exam</url-pattern>
    </servlet-mapping>

    <filter>
        <filter-name>ExamFilter</filter-name>
        <filter-class>com.yakovchuk.sphinx.filter.ExamFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>ExamFilter</filter-name>
        <url-pattern>/exam</url-pattern>
    </filter-mapping>

    <listener>
        <listener-class>com.yakovchuk.sphinx.initialization.InitializationServletContextListener</listener-class>
    </listener>

<!--    <error-page>
        <exception-type>java.lang.Throwable</exception-type>
        <location>/errorPage.jsp</location>
    </error-page>

    <error-page>
        <error-code>*</error-code>
        <location>/errorPage.jsp</location>
    </error-page>-->


</web-app>
